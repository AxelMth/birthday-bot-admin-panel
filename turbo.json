{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"type:check": {
			"inputs": ["tsconfig.json", "src/**"],
			"outputs": ["*.tsbuildinfo"]
		},
		"biome:check": {
			"outputs": [],
			"inputs": ["biome.json", "src/**"]
		},
		"biome:ci": {
			"outputs": [],
			"inputs": ["biome.json", "src/**"]
		},
		"build": {
			"dependsOn": ["type:check"],
			"outputs": ["build/client/**", "public/**"],
			"env": [
				"NODE_ENV=production",
				"VITE_SERVER_URL=https://birthday-bot-backend.fly.dev"
			]
		}
	}
}
